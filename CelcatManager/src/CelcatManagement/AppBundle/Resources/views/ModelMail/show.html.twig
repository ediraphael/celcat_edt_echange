{% extends 'CelcatManagementAppBundle::layout.html.twig' %}

{% block titre %}
    <h1>Mod√®le de mail</h1>
{% endblock %}

{% block body -%}

    <div class="record_actions">
        <span>
            {% include 'Action/action.html.twig' with { 'typeAction' : 'retour-liste', 'action' : {'hrefpath': 'celcat_management_app_modelmail'} } %}
        </span>
        <span>
            {% include 'Action/action-modifier.html.twig' with { 'href' :  path('celcat_management_app_modelmail_edit', { 'id': entity.id }) } %}
        </span>
        <span>
            {% include 'Action/action-supprimer.html.twig' with { 'href' :  path('celcat_management_app_modelmail_delete', { 'id': entity.id }) } %}
        </span>
    </div>
    <div id="categorie_principal" class="table-responsive">
        <table class="record_properties  table table-striped table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>De</th>
                    <td>{{ entity.fromAddress }}</td>
                </tr>
                <tr>
                    <th>A</th>
                    <td>{{ entity.toAddress }}</td>
                </tr>
                <tr>
                    <th>Sujet</th>
                    <td>{{ entity.subject }}</td>
                </tr>
                <tr>
                    <th>Message</th>
                    <td>{{ entity.body }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
