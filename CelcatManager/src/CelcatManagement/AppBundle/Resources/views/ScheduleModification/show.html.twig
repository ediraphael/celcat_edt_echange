{% extends 'CelcatManagementAppBundle::layout.html.twig' %}

{% block titre %}
    <h1>Calendrier modification</h1>
{% endblock %}

{% block body -%}

    <div class="record_actions">
        <span>
            {% include 'Action/action.html.twig' with { 'typeAction' : 'retour-liste', 'action' : {'hrefpath': 'celcat_management_app_schedulemodification'} } %}
        </span>
        <span>
            {% include 'Action/action-modifier.html.twig' with { 'href' :  path('celcat_management_app_schedulemodification_edit', { 'id': entity.id }) } %}
        </span>
        <span>
            {% include 'Action/action-supprimer.html.twig' with { 'href' :  path('celcat_management_app_schedulemodification_delete', { 'id': entity.id }) } %}
        </span>
    </div>
    <div id="categorie_principal" class="table-responsive">
        <table class="record_properties  table table-striped table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>User</th>
                    <td>{{ entity.user }}</td>
                </tr>
                <tr>
                    <th>Canceled</th>
                    <td>{{ entity.canceled }}</td>
                </tr>
                <tr>
                    <th>Validated</th>
                    <td>{{ entity.validated }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
