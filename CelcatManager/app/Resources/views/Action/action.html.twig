{% set href='#' %}
{% if action.hrefpath is defined %} 
	{% if action.hrefids is defined %}
		{% set ids = []  %}
		{% for hrefidNom, hrefidValeur in action.hrefids %}
			{% set ids = ids|merge( { (hrefidNom) : donnees[hrefidValeur] } ) %}
		{% endfor %}
		{% set href = path(action.hrefpath,ids) %}
	{% else %}
		{% set href = path(action.hrefpath) %}
	{% endif %}
{% endif %}


